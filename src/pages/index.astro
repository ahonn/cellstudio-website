import closeIcon from '../assets/close.svg';
import config from '../site.config';
---

<Layout title="CELL Studio">
  <main class="xl:px-6">
    <header class="flex pb-8 gap-2 items-center">
      <Picture src={logoImage} alt="CELL Studio" width={42} height={30} loading="eager" format="svg" />
      <h1 class="text-[25px] font-bold text-white/95 font-mono">CELL Studio</h1>
    </header>
    <div class="flex flex-col-reverse lg:flex-row">
      <!-- <div class="flex lg:hidden justify-between sm:justify-center sm:gap-4 mt-8"> -->
      <!--   { -->
      <!--     config.links.map(({ name, url }: { name: string; url: string }) => ( -->
      <!--       <div class="bg-primary px-1 sm:px-2 py-1"> -->
      <!--         <a -->
      <!--           href={url} -->
      <!--           target="_blank" -->
